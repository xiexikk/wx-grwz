/**app.wxss**/
page{
  font: 24rpx "Microsoft Yahei", "Helvetica Neue", Helvetica, Arial, sans-serif; 
  color: #666;  
  width: 100%;
  /* min-height: 100%; */
  background-color: #212121;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
  box-sizing:border-box;
}

/* .wxss */
.header{ width: 100%; height: 120rpx;  box-sizing: border-box; position: relative;}
.header .in{ width: 100%; height: 120rpx; background: #080808 url("http://120.77.250.136/images/nav-bg.png") repeat-x;
  border-bottom: 1px solid #2d2d2d; position: fixed; top: 0; left: 0; z-index: 99;}
.logo{ width:260rpx; height: 100rpx; margin-top: 10rpx; float: left; }
.logo .logo-img{ width: 100%; height: 100%; margin-left: 10rpx;}
.nav{ position: absolute; right: 20rpx; top: 15rpx;}
.nav .t-nav{ width: 160rpx; height: auto;}
.nav .t-nav .userinfo-avatar{ width: 50rpx; height: 50rpx; border-radius: 50%; float: right; margin-right: 20rpx; }
.nav .t-nav-list{ width: 160rpx; background-color: rgba(15, 15, 15, 0.8);  border-radius: 0 0 4px 4px;
 position: absolute; top: 120rpx;  z-index: 99; }
.nav .t-nav-list .li{ width: 100%; height: 80rpx; line-height: 80rpx; text-align: center; color: #fff; font-size: 30rpx;}

.banner{ width: 100%; height: 400rpx; position: relative;}
.banner .slide-image{ width: 100%;}
.welcome{ width: 100%; text-align: center; color:#42251F; font-family: cursive; 
position: absolute;  top:100rpx; z-index: 100; }
.welcome .hi{ font-weight: 600;color: #996B4F; font-size: 70rpx;}
.welcome .ti{ font-size: 40rpx; margin-top: 30rpx;}

.my-com{ width: 100%; overflow: hidden; padding:0 30rpx; margin-top: 40rpx; box-sizing: border-box; }
.my-com .hd-tit{ width: 100%;  height: auto; text-align: center;}
.my-com .hd-tit .line{ width: 100%; height: 3px; background: url("http://120.77.250.136/images/line.png") repeat-x;
 display: block; margin: 20rpx 0; }
.my-com .hd-tit .ti{ width: 200rpx;  height: 46rpx; background-repeat: no-repeat; background-size: cover; 
display: inline-block; margin: 0 auto;}

.my-works .hd-tit .ti{ background-image: url("http://120.77.250.136/images/works2.png");}
.my-skills .hd-tit .ti{ background-image: url("http://120.77.250.136/images/skills2.png");}
.my-links .hd-tit .ti{ background-image: url("http://120.77.250.136/images/links2.png");}
.my-links{ margin-bottom: 30rpx;}
.my-works{ margin-bottom: 30rpx;}

.web-lis-com{ overflow: hidden;}
.web-list{ width: 100%; overflow: hidden; margin-bottom: 20rpx;}
.web-list .w-ti{ float: left; color: #e6c100; font-size:32rpx;}
.web-list .list{ margin-left: 150rpx; margin-top: 5rpx; color: #fff; font-size: 28rpx;}
.web-list .list li{ overflow: hidden; display: block; margin-bottom: 25rpx;}

.works-lists{ margin:30rpx 0;/*  overflow: hidden;*/ } 
.works-list{ display: none;}
.works-list .item{ width: 100%; padding: 30rpx; background-color: #fff; border-radius: 4rpx; margin-bottom: 30rpx;
  box-sizing: border-box; float: left;}
.works-list .item:last-of-type{ margin-bottom: 0;}
.works-list .item .tp{ width: 60%; margin: 0 auto;}
.works-list .tp .img{ width: 100%;  display: inline-block;}
.works-list .txt{ width: 100%; margin-top: 10rpx;}
.works-list .txt .tit{ width:100%; text-align: center; color:#f40; font-size: 36rpx; margin-bottom: 10rpx; display: block;}
.works-list .txt .txt{ line-height: 1.4; font-size:28rpx;}
.works-list.show{ display: block;}
.work-tab{ width: 100%; line-height: 70rpx; overflow: hidden;}
.work-tab .li{ width: 50%; float: left; text-align: center; font-size: 32rpx; color: #fff;}
.work-tab .li.cur{ color:#e6c100;}

.my-skills{ padding-bottom: 30rpx;}
.skills-list{ width: 100%; overflow: hidden; padding: 0 30rpx 30rpx; box-sizing: border-box;}
.skills-list .tp{ width: 33.33%; text-align: center; overflow: hidden;  float: left; padding: 30rpx 0; }
.skills-list .tp .img{ width:120rpx; height: 120rpx; border-radius: 50%;display: inline-block;  
  animation:skill 1.1s linear alternate infinite; -webkit-animation:skill 1.1s linear alternate infinite;
  -ms-animation:skill 1.1s linear alternate infinite;
  }
@keyframes skill{
  from{ transform:scale(1,1); -webkit-transform: scale(1,1); -ms-transform: scale(1,1); }
  to{ transform:scale(1.08,1.08);-webkit-transform:scale(1.08,1.08); -ms-transform:scale(1.08,1.08); }
}

.sk-txt-list{ overflow: hidden; font-size: 28rpx; color: #fff; padding-left: 20rpx;}
.sk-txt-list .pp{ line-height: 1.5; margin-bottom: 10rpx; overflow: hidden;}

.nav{ width: 100%; height: 100rpx; position: relative;}
.nav .in{ width: 100%; height: 100rpx; position: fixed; bottom: 0; left: 0; z-index: 99;border-top: 1px solid #2d2d2d; background-size: cover;background: #080808 url("http://120.77.250.136/images/nav-bg2.png") repeat;}  
.nav .li{ width: 25%; height: 100%; float: left; text-align: center; color:#fff; font-size: 30rpx;}
.nav .li .ti{ width: 100%; display: block; margin-top: -5rpx;}
.nav .li .ico{ width: 50rpx; height:50rpx; display:inline-block; background-repeat: no-repeat; 
background-size: cover; margin-top: 10rpx;}
.nav .li .ico01{ background-image: url("http://120.77.250.136/images/ico-home.png");}
.nav .li .ico02{ background-image: url("http://120.77.250.136/images/ico-works.png");}
.nav .li .ico03{ background-image: url("http://120.77.250.136/images/ico-skill.png");}
.nav .li .ico04{ background-image: url("http://120.77.250.136/images/ico-my.png");}

.my{ width: 100%; padding:40rpx; box-sizing: border-box; overflow: hidden; margin-top: 30rpx;}
.my-head{ width: 150rpx; height: 150rpx; border-radius: 50%; overflow: hidden; margin: 0 auto; }
.my-head .imgs{ width: 100%; height: 100%;}
.my-info{ width: 100%;color: #fff; font-size: 30rpx; overflow: hidden; margin-top: 80rpx;}
.my-info .li{ line-height: 60rpx;}
.my-info .li .ti{ float: left; width:120rpx;}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}